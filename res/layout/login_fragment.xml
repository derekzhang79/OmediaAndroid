<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/login_line1"
        android:layout_width="450dip"
        android:layout_height="70dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:gravity="center|right"
            android:text="@string/login_username"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="12pt" />

        <EditText
            android:id="@+id/username_login"
            android:layout_width="300dip"
            android:layout_height="60dip"
            android:background="#772b2b2b"
            android:paddingLeft="10dip" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_line2"
        android:layout_width="450dip"
        android:layout_height="70dip"
        android:layout_below="@id/login_line1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dip"
            android:layout_height="60dip"
            android:gravity="center|right"
            android:text="@string/login_passwd"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black"
            android:textSize="12pt" />

        <EditText
            android:id="@+id/password_login"
            android:layout_width="300dip"
            android:layout_height="60dip"
            android:background="#772b2b2b"
            android:inputType="textPassword"
            android:paddingLeft="10dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_line3"
        android:layout_width="450dip"
        android:layout_height="70dip"
        android:layout_below="@id/login_line2"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/rememberPassword_login"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:text="记住密码"
            android:layout_marginLeft="100dip"
            android:textColor="@android:color/black"
            android:textSize="8pt" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="150dip"
            android:layout_height="60dip"
            android:layout_marginLeft="25dip"
            android:text="登陆"
            android:textColor="@android:color/black"
            android:textSize="12pt" />
    </LinearLayout>


</RelativeLayout>